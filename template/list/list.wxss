.page-container {
	padding: 0 30rpx;
	box-sizing: border-box;
	position: relative;
}
.page-container.height {
  height: 100%;
}
.list {
	padding-bottom: 20rpx;
}
.list-bg {
	font-size: 14px;
	color: #ff5145;
	text-align: center;
	position: absolute;
	top: 57%;
	left: 50%;
	transform: translate(-50%,-50%);
}
.list-image {
	width: 200rpx;
	height: 200rpx;
	margin-bottom: 30rpx;
}
.item {
	background: #ff5145;
	padding: 20rpx 20rpx;
	margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
	justify-content: center;
	position: relative;
	overflow: hidden;
}
.item_hover {
  opacity: 0.6;
}
.item-title {
	font-size: 14px;
	color: #fff;
	margin-bottom: 10rpx;
}
.item-time {
	font-size: 12px;
	color: #d8d6d6;
}
.item-icon {
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	border: 2px solid #d8d6d6;
	font-size: 25px;
	color: #d8d6d6;
	text-align: center;
	line-height: 140rpx;
	position: absolute;
	top: -19rpx;
	right: -33rpx;
	transform: rotate(-45deg);
}